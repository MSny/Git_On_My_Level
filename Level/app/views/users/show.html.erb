<p id="notice"><%= notice %></p>
<p>
  <strong>Email:
  <%= @user.email %></strong>
</p>

<% if current_user == @user %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>

<div id="user-area">

</div>

<div id="content-area">

</div>

<!-- individual User -->
<script type="text/template" id="userTemp">
  <div class="user_main">
  <small>{{= user.email }}</small>
  <p>You have been a member with us since: {{= user.created_at }} last login: {{= user.updated_at }}</p>
  <span class="user_info">Your total Number of logins: {{= user.logins }}</span>
  </div>
  <div class="rescue_info">
    
    <p class="error_explanation"> You haven't set up your RescueTime API Key yet. You'll need that to track your experience points and level up into a High-Wizard of the Keyboard! <a href="http://rescuetime.com">Rescue Time</a> </p>
  </div>
  <form class="pure-form pure-form-aligned" id="user-account">
    <fieldset>
    <div class="pure-control-group">
    <label for="email"> Email
    <input type="text" id="email" value="{{= user.email }}">
    </label>
    </div>
    <div class="pure-control-group">
    <label for="API"> Rescue-Time API
    <input type="text" id="rescue-key">
    </label>
    </div>
    <div class="pure-controls">
    <button type="submit" class="pure-button"> Update!
    </button>
    </div>
    </fieldset>
  </form>
</script>

<script type="text/template" id="skill-template">
<div>
<span class="experience">Experience: {{- skill.exp}}</span>
<span class="date">Added: {{- skill.added_at}}</span>
<span class="language" style="background: {{= skill.language.color }}"> {{- skill.language.name}} </span>
</div>

</script>

<script type="text/javascript">
_.templateSettings = {
     evaluate    : /\{\{([\s\S]+?)\}\}/g,
     interpolate : /\{\{=([\s\S]+?)\}\}/g,
     escape      : /\{\{-([\s\S]+?)\}\}/g
  };
// sets the current user id so Backbone Views have access to it
</script>